{
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveWatchOutput": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@configs/*": ["./src/configs/*"],
      "@db/*": ["./src/db/*"],
      "@domains/*": ["./src/domains/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
